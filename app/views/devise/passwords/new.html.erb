<% provide(:title, t('devise.sessions.user.reset_password')) %> 
<h2><%= t('devise.sessions.user.reset_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form-horizontal reset_password" }) do |f| %>
  <%= devise_error_messages! %>

          <div id="legend">
            <legend class=""><%= t('devise.sessions.user.reset_password_h2') %></legend>
          </div>
  <div class="form-group">
    <%= f.label :email, t('devise.sessions.user.reset_password_email'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div> 
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit t('devise.sessions.user.reset_password_button'), :class => 'btn btn-primary' %>

      <%= render "devise/shared/links" %>
    </div>  
  </div>
<% end %>