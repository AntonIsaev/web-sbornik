<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.sessions.user.signin.title', :default => t('en.devise.sessions.user.signin.title')), new_session_path(resource_name), :class=>'btn btn-default' %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.sessions.user.signup.title', :default => t('en.devise.sessions.user.signup.title')), new_registration_path(resource_name), :class=>'btn btn-default' %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.sessions.user.reset_password', :default => t('en.devise.sessions.user.reset_password')), new_password_path(resource_name), :class=>'btn btn-default' %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.passwords.user.restore_account_send_email_again', :default => t('en.devise.passwords.user.restore_account_send_email_again')), new_confirmation_path(resource_name), :class=>'btn btn-default' %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.passwords.user.unlock_account_send_email_again', :default => t('en.devise.passwords.user.unlock_account_send_email_again')), new_unlock_path(resource_name), :class=>'btn btn-default' %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t('devise.passwords.user.login_via_provider', :provider => provider.to_s.titleize, :default => t('en.devise.passwords.user.login_via_provider', :provider => provider.to_s.titleize)), omniauth_authorize_path(resource_name, provider), :class=>'btn btn-default' %>
  <% end -%>
<% end -%>