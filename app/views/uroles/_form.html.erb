<%= form_for [@journal, @publication, @urole], :html => { :class => "form-horizontal urole" } do |f| %>

  <% if @urole.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@urole.errors.count, "error") %> prohibited this urole from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @urole.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.email_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label 'role_id0', t('uroles.new.select_role', :default => t('en.uroles.new.select_role')), :class => 'control-label col-lg-2' %>

    <div class="col-lg-10">
      <%= f.radio_button :role_id, '0', id: 'urole_role_id0', :checked => @urole.role_id == 0 %>
      <%= f.label 'role_id0', t('uroles.new.role0', :default => t('en.uroles.new.role0')), :class => 'control-label' %>
       <p><%= t('uroles.new.role0_comment', :default => t('en.uroles.new.role0_comment')) %></p>
    </div>
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.radio_button :role_id, '1', id: 'urole_role_id1', :checked => @urole.role_id == 1 %>
      <%= f.label 'role_id1', t('uroles.new.role1', :default => t('en.uroles.new.role1')), :class => 'control-label' %>
      <p><%= t('uroles.new.role1_comment', :default => t('en.uroles.new.role1')) %></p>
    </div>
    <%=f.error_span(:role_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <% if @urole.email == nil %>
        <%= f.submit t('uroles.new.button', :default => t('en.uroles.new.button')), :class => 'btn btn-primary' %>
      <% else %>  
        <%= f.submit t('uroles.edit.button', :default => t('en.uroles.edit.button')), :class => 'btn btn-primary' %>
      <% end %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                journal_publication_path(@journal, @publication), :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
