<%- model_class = Institution -%>
<div class="page-header">
  <h1><%= @institution.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %></strong></dt>
  <dd><%= @institution.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:titleingenitive) %></strong></dt>
  <dd><%= @institution.titleingenitive %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postaddress) %></strong></dt>
  <dd><%= link_to @institution.postaddress, 'http://maps.yandex.ru/?text=' + @institution.postaddress, :target => '_blank'%></dd>
  <dt><strong><%= model_class.human_attribute_name(:webaddress) %></strong></dt>
  <dd><%= link_to @institution.webaddress, @institution.webaddress, :target => '_blank' %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              institutions_path, :class => 'btn btn-default'  %>
<% if user_signed_in? %>       
  <% if @institution.user_id == current_user.id %>     
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_institution_path(@institution), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  institution_path(@institution),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
  <% end %>                
<% end %>                
