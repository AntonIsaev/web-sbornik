<%- model_class = GlobalParam -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:param_name) %>:</strong></dt>
  <dd><%= @global_param.param_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:val) %>:</strong></dt>
  <dd><%= @global_param.val %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @global_param.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              global_params_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_global_param_path(@global_param), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              global_param_path(@global_param),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
