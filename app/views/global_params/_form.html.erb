<%= form_for @global_param, :html => { :class => "form-horizontal global_param" } do |f| %>

  <% if @global_param.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@global_param.errors.count, "error") %> prohibited this global_param from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @global_param.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :param_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :param_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:param_name) %>
  </div>
  <div class="form-group">
    <%= f.label :val, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :val, :class => 'form-control' %>
    </div>
    <%=f.error_span(:val) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                global_params_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
