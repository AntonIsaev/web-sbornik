<%- model_class = Portion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ftype) %></th>
      <th><%= model_class.human_attribute_name(:position) %></th>
      <th><%= model_class.human_attribute_name(:file_file_name) %></th>
      <th><%= model_class.human_attribute_name(:file_content_type) %></th>
      <th><%= model_class.human_attribute_name(:file_file_size) %></th>
      <th><%= model_class.human_attribute_name(:file_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @portions.each do |portion| %>
      <tr>
        <td><%= link_to portion.id, portion_path(portion) %></td>
        <td><%= portion.ftype %></td>
        <td><%= portion.position %></td>
        <td><%= portion.file_file_name %></td>
        <td><%= portion.file_content_type %></td>
        <td><%= portion.file_file_size %></td>
        <td><%= portion.file_updated_at %></td>
        <td><%=l portion.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_portion_path(portion), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      portion_path(portion),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_portion_path,
            :class => 'btn btn-primary' %>
